<section id="content" style="background: #444;">
    <div class="divider divider-short divider-rounded divider-center">
    </div>
    <div class="content-wrap">
        <div class="container clearfix">
            <div class="row center">
                <div class="col-sm-12 offset-sm-3" {{#if noMessages}}  hidden {{/if}}>
                    <div class="style-msg {{errormsg}}">
                        <div class="sb-msg">
                            <strong>
                                {{message}}
                            </strong>
                        </div>
                        <button aria-hidden="true" class="close" data-dismiss="alert" type="button">
                            Ã—
                        </button>
                    </div>
                </div>
            </div>
            <div class="tabs divcenter nobottommargin clearfix" id="tab-login-register" style="max-width: 500px;">
                <ul class="tab-nav tab-nav2 center clearfix">
                    <li class="inline-block"><a href="#tab-login">Forgot password</a></li>
                    <li class="inline-block"><a href="#tab-register">Verify code</a></li>
                </ul>
                <div class="tab-container">
                    <div class="tab-content clearfix" id="tab-login">
                        <div class="panel panel-default nobottommargin">
                            <div class="panel-body" style="padding: 40px;">
                                <form action="/users/reset-password" class="nobottommargin" id="login-form" method="post" name="login-form">
                                    <h3>
                                        Enter your email:
                                    </h3>
                                    <div class="col_full">
                                        <input class="form-control" id="reset_form_email" name="reset_form_email" type="email" value=""/>
                                        <span class="label label-danger hide"></span>
                                    </div>
                                    <div class="col_full nobottommargin">
                                        <button class="button button-3d button-black nomargin" id="login-form-submit" name="login-form-submit" value="login">
                                            Send email
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="tab-content clearfix" id="tab-register">
                    <div class="panel panel-default nobottommargin">
                            <div class="panel-body" style="padding: 40px;">
                                <form action="#" class="nobottommargin" id="" method="post" name="login-form">
                                    <h3>
                                        Enter your code:
                                    </h3>
                                    <div class="col_full">
                                        <input class="form-control" id="checkcode_form_email" name="checkcode_form_email" type="text" value=""/>
                                    </div>
                                    <div class="col_full nobottommargin">
                                        <a class="button button-rounded button-reveal button-small button-green tright" id="Modal1">
                                            <i class="icon-line-arrow-right">
                                            </i>
                                            <span>
                                                Submit
                                            </span>
                                        </a>
                                        <a class="button hide" data-lightbox="inline" href="#myModal1" id="Modal2"> </a>
                                    </div>
                                </form>
                            </div>

                            <div class="modal1 mfp-hide" id="myModal1">
                                <div class="block divcenter" style="background-color: #FFF; max-width: 500px;">
                                    <div class="" style="padding: 30px;">
                                        <div class="col_full">
                                            <label for="register_form_fullname">
                                                New password
                                            </label>
                                            <input class="typeahead sm-form-control tt-input required" id="" name="newpwd_form" type="password" value="" placeholder="Min length > 6" />
                                            <span class="label label-danger hide">
                                            </span>
                                        </div>
                                        <div class="col_full">
                                            <label for="register_form_fullname">
                                                Confirm new password
                                            </label>
                                            <input class="typeahead sm-form-control tt-input required" id="" name="confirm_newpwd_form" type="password" value="" placeholder="Min length > 6"/>
                                            <span class="label label-danger hide">
                                            </span>
                                        </div>
                                    </div>
                                    <div class="section center nomargin" style="padding: 10px;">
                                        <a class="button" href="#" id="change-password">
                                            Change password
                                        </a>
                                        <a class="button button-red" href="#" onclick="$.magnificPopup.close();return false;">
                                            Close
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="divider divider-short divider-rounded divider-center">
    </div>
</section>
<!-- #content end -->
{{#contentFor "pageScripts"}}
<script type="text/javascript" src="/assets/js/customjs/resetController.js"></script>
{{/contentFor}}
