<!-- Content
		============================================= -->

<section id="content" style="background: #444;">
    <div class="divider divider-short divider-rounded divider-center"></div>
    <div class="content-wrap">
        <div class="container clearfix">
            <div class="row center">
               <div class="col-sm-12 offset-sm-3" {{#if noMessage}} hidden {{/if}}>
                  <div class="style-msg errormsg">
                     <div class="sb-msg"></i><strong>{{errorMsg}}</div>
                     <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  </div>
               </div>
               <div class="col-sm-12 offset-sm-3" {{#if noSuccessMessage}} hidden {{/if}}>
                  <div class="style-msg successmsg">
                     <div class="sb-msg"><strong>{{successMsg}}</div>
                     <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                  </div>
               </div>
            </div>

            <div class="tabs divcenter nobottommargin clearfix" id="tab-login-register" style="max-width: 500px;">
                <ul class="tab-nav tab-nav2 center clearfix">
                    <li class="inline-block"><a href="#tab-login">Login</a></li>
                    <li class="inline-block"><a href="#tab-register">Register</a></li>
                </ul>
                <div class="tab-container">

                    <div class="tab-content clearfix" id="tab-login">
                        <div class="panel panel-default nobottommargin">
                            <div class="panel-body" style="padding: 40px;">
                                <form id="login-form" name="login-form" class="nobottommargin" action="/users/login" method="post">
                                    <h3>Login to your Account</h3>
                                    <div class="col_full">
                                        <label for="login_form_email">Email Address:</label>
                                        <input type="text" id="login_form_email" name="login_form_email" value="" class="form-control" />
                                        <span class="label label-danger hide"></span>
                                    </div>
                                    <div class="col_full">
                                        <label for="login_form_password">Password:</label>
                                        <input type="password" id="login_form_password" name="login_form_password" value="" class="form-control" />
                                    </div>
                                    <div class="col_full nobottommargin">
                                        <button class="button button-3d button-black nomargin" id="login-form-submit" name="login-form-submit" value="login">Login</button>
                                        <a href="/users/reset-password" class="fright">Forgot Password?</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="tab-content clearfix" id="tab-register">
                        <div class="panel panel-default nobottommargin">
                            <div class="panel-body" style="padding: 40px;">
                                <h3>Register for an Account</h3>
                                <form id="register-form" name="register-form" class="nobottommargin" action="/users/register" method="post">
                                    <div class="col_full">
                                        <label for="register_form_fullname">Fullname:</label>
                                        <input type="text" id="register_form_fullname" name="register_form_fullname" value="" class="form-control" />
                                        <span class="label label-danger hide"></span>
                                    </div>
                                    <div class="col_full">
                                        <label for="register_form_email">Email Address:</label>
                                        <input type="text" id="register_form_email" name="register_form_email" value="" class="form-control" />
                                        <span class="label label-danger hide"></span>
                                    </div>
                                    <div class="col_full">
                                        <label for="register_form_password">Password:</label>
                                        <input type="password" id="register_form_password" name="register_form_password" value="" class="form-control" />
                                        <span class="label label-danger hide"></span>
                                    </div>
                                    <div class="col_full">
                                        <label for="register_form_confirm_password">Re-enter Password:</label>
                                        <input type="password" id="register_form_confirm_password" name="register_form_confirm_password" value="" class="form-control" />
                                        <span class="label label-danger hide"></span>
                                    </div>
                                    <div class="col_full">
                                        <label for="register_form_phone">Phone:</label>
                                        <input type="text" id="register_form_phone" name="register_form_phone" value="" class="form-control" maxlength="11" onkeypress='return event.charCode >= 48 && event.charCode <= 57'/>
                                        <span class="label label-danger hide"></span>
                                    </div>
                                    <div class="col_full nobottommargin">
                                        <button type="submit" class="button button-3d button-black nomargin" id="register-form-submit" name="register-form-submit" value="register">Register Now</button>
                                        <a href="/users/reset-password" class="fright">Forgot Password?</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
    <div class="divider divider-short divider-rounded divider-center"></div>
</section>
<!-- #content end -->

{{#contentFor "pageScripts"}}
    <script type="text/javascript" src="/assets/js/customjs/loginController.js"></script>
{{/contentFor}}