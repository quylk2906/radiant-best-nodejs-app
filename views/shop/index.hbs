    <div class="container clearfix">
        <h1>
            Shop
        </h1>
        <span>
            Choose any theme you like.
        </span>
        <ol class="breadcrumb">
            <li>
                <a href="/">
                    Home
                </a>
            </li>
            <li>
                <a href="/shop">
                    Shop
                </a>
            </li>
            <li class="active">
                Shop Filter
            </li>
        </ol>
    </div>
</section>
<!-- #page-title end -->
<!-- Content
============================================= -->
<section id="content">
    <div class="content-wrap">
        <div class="container clearfix">
            <!-- Post Content
         ============================================= -->
            <div class="postcontent nobottommargin col_last">
                <!-- Shop
            ============================================= -->
                <div class="shop product-2 grid-container clearfix" id="shop">
                    {{#each products}}
                    <div class="product {{this.group}} {{this.category}} clearfix">
                        <div class="product-image">
                            <a href="#">
                                <img alt="{{this.name}}" src="{{this.thumbnail}}"/>
                            </a>
                            <a href="/shop/item-details/{{this.category}}/{{this.title_meta}}">
                                <img alt="{{this.name}}" src="/assets/images/shop/thumbnail_over.png"/>
                            </a>
                            <!-- <div class="sale-flash">50% Off*</div> -->
                            <div class="product-overlay">
                                <a class="add-to-cart" data-id="{{this._id}}" href="#">
                                    <i class="icon-shopping-cart">
                                    </i>
                                    <span>
                                        Add to Cart
                                    </span>
                                </a>
                                <!-- <a href="include/ajax/shop-item.hbs" class="item-quick-view" data-lightbox="ajax"><i class="icon-zoom-in2"></i><span> Quick View</span></a> -->
                                <a class="item-quick-view" data-id="{{this._id}}">
                                    <i class="icon-zoom-in2">
                                    </i>
                                    <span>
                                        Quick View
                                    </span>
                                </a>
                            </div>
                        </div>
                        <div class="product-desc center">
                            <div class="product-title">
                                <h3>
                                    <a href="/shop/item-details/{{this.category}}/{{this.title_meta}}">
                                        {{#sliceString this.name 30}}{{/sliceString}}
                                    </a>
                                </h3>
                            </div>
                            <div class="product-price">
                               <!--  <del>
                                    12.49 VND
                                </del> -->
                                <ins>
                                    {{this.price}}.000 VND
                                </ins>
                            </div>
                            <div class="product-rating">
                                {{#times this.rate '<i class="icon-star3"></i>'}}
                                    {{this}}
                                 {{/times}}
                                <i class="icon-star-half-full">
                                </i>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
